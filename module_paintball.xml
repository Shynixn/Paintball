<?xml version="1.0" encoding="UTF-8"?>
<project name="module_paintball" default="compile.module.paintball">
  <dirname property="module.paintball.basedir" file="${ant.file.module_paintball}"/>
  
  <property name="module.jdk.home.paintball" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.paintball" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.paintball" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.paintball" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="paintball.output.dir" value="${module.paintball.basedir}/target/classes"/>
  <property name="paintball.testoutput.dir" value="${module.paintball.basedir}/target/test-classes"/>
  
  <path id="paintball.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="paintball.module.production.classpath">
    <path refid="${module.jdk.classpath.paintball}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.9-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.9-snapshot.classpath"/>
    <path refid="library.bountifulapi-1.5.3.classpath"/>
    <path refid="library.holographicdisplays.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.milkbowl.vault:vaultapi:1.5.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.8-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="paintball.runtime.production.module.classpath">
    <pathelement location="${paintball.output.dir}"/>
    <path refid="library.bountifulapi-1.5.3.classpath"/>
    <path refid="library.holographicdisplays.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.milkbowl.vault:vaultapi:1.5.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.8-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="paintball.module.classpath">
    <path refid="${module.jdk.classpath.paintball}"/>
    <pathelement location="${paintball.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.9-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.9-snapshot.classpath"/>
    <path refid="library.bountifulapi-1.5.3.classpath"/>
    <path refid="library.holographicdisplays.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.milkbowl.vault:vaultapi:1.5.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.8-r0.1-snapshot.classpath"/>
  </path>
  
  <path id="paintball.runtime.module.classpath">
    <pathelement location="${paintball.testoutput.dir}"/>
    <pathelement location="${paintball.output.dir}"/>
    <path refid="library.maven:_org.spigotmc:spigot-api:1.9-r0.1-snapshot.classpath"/>
    <path refid="library.maven:_net.md-5:bungeecord-chat:1.9-snapshot.classpath"/>
    <path refid="library.bountifulapi-1.5.3.classpath"/>
    <path refid="library.holographicdisplays.classpath"/>
    <path refid="library.maven:_commons-lang:commons-lang:2.6.classpath"/>
    <path refid="library.maven:_com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
    <path refid="library.maven:_junit:junit:4.10.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.1.classpath"/>
    <path refid="library.maven:_com.google.guava:guava:17.0.classpath"/>
    <path refid="library.maven:_com.google.code.gson:gson:2.2.4.classpath"/>
    <path refid="library.maven:_org.avaje:ebean:2.8.1.classpath"/>
    <path refid="library.maven:_javax.persistence:persistence-api:1.0.classpath"/>
    <path refid="library.maven:_org.yaml:snakeyaml:1.15.classpath"/>
    <path refid="library.maven:_net.milkbowl.vault:vaultapi:1.5.classpath"/>
    <path refid="library.maven:_org.bukkit:bukkit:1.8-r0.1-snapshot.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.paintball">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.paintball">
    <patternset refid="excluded.from.module.paintball"/>
  </patternset>
  
  <path id="paintball.module.sourcepath">
    <dirset dir="${module.paintball.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.paintball" depends="compile.module.paintball.production,compile.module.paintball.tests" description="Compile module Paintball"/>
  
  <target name="compile.module.paintball.production" depends="register.custom.compilers" description="Compile module Paintball; production classes">
    <mkdir dir="${paintball.output.dir}"/>
    <javac2 destdir="${paintball.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.paintball}/javac">
      <compilerarg line="${compiler.args.paintball}"/>
      <bootclasspath refid="paintball.module.bootclasspath"/>
      <classpath refid="paintball.module.production.classpath"/>
      <src refid="paintball.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.paintball"/>
    </javac2>
    
    <copy todir="${paintball.output.dir}">
      <fileset dir="${module.paintball.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.paintball.tests" depends="register.custom.compilers,compile.module.paintball.production" description="compile module Paintball; test classes" unless="skip.tests"/>
  
  <target name="clean.module.paintball" description="cleanup module">
    <delete dir="${paintball.output.dir}"/>
    <delete dir="${paintball.testoutput.dir}"/>
  </target>
</project>